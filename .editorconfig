# editorconfig.org helps projects define and maintain consistent coding styles
# across different editors and IDEs by declaring policy here and having editors
# pick up correct styleguide cues when dealing with any of the project's files.

# this is the project root
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false
